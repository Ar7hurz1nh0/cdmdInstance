{
  "compilerOptions": {
    "target": "es5",
    "lib": [ "esnext" ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "isolatedModules": true,
    "baseUrl": ".",
  },
  "include": ["**/*.ts", "global.d.ts"],
  "exclude": ["node_modules"]
}